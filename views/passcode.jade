extends layout
block style
  link(rel="stylesheet", href="stylesheets/form.css")
block content
  form(action="/#{passcodeType}", method="POST").passcode
    label(for="passcode") enter #{passcodeType} passcode:
    input(id="passcode",name="passcode",type="password",placeholder="****")
    h3 #{passcodeType} privileges:
    ul
      for priv in privileges
        li #{priv}
    if error
      p *#{error}
    input(type="submit",value="Confirm passcode")
